---

export interface Props {
    title: string;
    description: string;
    link: string;
}

const { title, description, link } = Astro.props;

---

<div class="bg-dark-blue p-6 rounded shadow">
    <h3 class="font-bold text-xl text-white mb-2">{title}</h3>
    <p class=" text-white mb-4">{description}</p>
    <a href={link} class="text-light-blue hover:text-dark-blue text-white" >Ver más →</a>
</div>