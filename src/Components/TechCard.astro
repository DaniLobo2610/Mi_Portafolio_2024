---

export interface Props {
    title: string;
    tech: string[];
}

const { title, tech } = Astro.props;

---

<div class="bg-dark-blue p-4 rounded shadow">
    <h3 class="font-bold text-lg text-white mb-2 " >{title}</h3>
    <ul class="list-disc list-inside text-white">
        { tech.map( ( t ) => ( 
            <li>{ t }</li>
         ) ) }
    </ul>
</div>